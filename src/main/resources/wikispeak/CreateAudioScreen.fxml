                  <Insets bottom="5.0" right="5.0" />
               </HBox.margin>
               <children>
                  <Text fx:id="infoText" fill="#0000006f" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="100.0">
