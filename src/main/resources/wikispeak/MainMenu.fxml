<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="rootBorderPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wikispeak.MainMenuController">
   <center>
      <VBox alignment="CENTER" prefHeight="366.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCreate" prefHeight="100.0" prefWidth="450.0" text="Create a New Creation">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
               <font>
                  <Font size="20.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#handlePlay" prefHeight="100.0" prefWidth="450.0" text="Play/Delete Existing Creations">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
               <font>
                  <Font size="20.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#handleCreate" prefHeight="100.0" prefWidth="450.0" text="Coming Soon: Play Quiz">
               <font>
                  <Font name="System Italic" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to VARPedia" textAlignment="CENTER" wrappingWidth="600.0" BorderPane.alignment="CENTER">
         <font>
            <Font size="40.0" />
         </font>
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
      </Text>
   </top>
